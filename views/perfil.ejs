<!-- Medieval Sharp Font -->
<link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=MedievalSharp" />

<nav>
  <% include ../partials/navbar %>
</nav>

<% include ../partials/error %>

<div class="info-box">
  <div style="display:inline-block; margin-right:3vw">
    <img src=<%= perfil.imagem %> style="width:150px; height:150px" />
  </div>

  <div class="medieval-text" style="display:inline-block">
    <div style="margin-bottom:5px">
      Nome: <%= perfil.nome %>
    </div>
    <div style="margin-bottom:5px">
      Cpf: <%= perfil.cpf %>
    </div>
    <div style="margin-bottom:5px">
      E-mail: <%= perfil.email %>
    </div>
    <form action="/changepassword/<%= perfil.id %>" method="post">
      <input type="hidden" name="email" value="<%= perfil.email %>">
      <label>Senha Antiga: </label>
      <input type="password" name="senhaAntiga" placeHolder="Senha Antiga"><br>
      <label>Nova Senha: </label>
      <input type="password" name="senhaNova" placeHolder="Senha Nova"><br>
      <label>Confirmar Nova Senha: </label>
      <input type="password" name="conf_senhaNova" placeHolder="Confirmação de Senha"><br>
      <input type="submit" value="Alterar Senha">
    </form>
  </div>
</div>

<% include ../partials/footer %>