<!-- W3.CSS by W3Schools -->
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<!-- Medieval Sharp Font -->
<link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=MedievalSharp" />

<nav>
  <% include ../partials/navbar %>
</nav>

<% include ../partials/error %>

<div id="principal" class="w3-display-container screen">
  <img src="/images/background.png" class="w3-image" style="width:100%; height:100%" />

  <div class="w3-display-middle blank-bg"></div>

  <div class="w3-display-topmiddle w3-container">
    <h1 class="medieval-text title">Lista de Usuários</h1>
  </div>

  <div class="w3-display-middle w3-container scroll">
    <table class="medieval-text">
      <tr>
        <td>Nome</td>
        <td>Cpf</td>
        <td>E-mail</td>
        <td>Remover?</td>
      </tr>

      <% usuarios.map(function(usuario) { %>
        <tr>
          <td>
            <%= usuario.nome %>
          </td>
          <td>
            <%= usuario.cpf %>
          </td>
          <td>
            <%= usuario.email %>
          </td>
          <td class="remove">
            <a href="/remuser/<%= usuario.id %>" onclick="return confirm('Deseja realmente excluir o usuário <%= usuario.nome %>?');">
              <img src="/images/close.png" style="width:30px; height:30px">
            </a>
          </td>
        </li>
      <% }); %>
    </table>
  </div>
</div>

<% include ../partials/footer %>